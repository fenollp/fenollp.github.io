<?xml version="1.0" encoding="UTF-8"?>
<mujoco model="cdpr">
    <compiler coordinate="global"/>
    <include file="scene.xml"/>
    <default>
        <default class="pole">
            <geom type="cylinder" size="0.02" rgba="1 1 1 1"/>
            <site type="sphere" rgba=".9 .9 .9 1" size="0.005"/>
        </default>
    </default>
    <asset>
        <mesh name="lightcone" file="lightcone.stl"/>
    </asset>

    <worldbody>
        <light pos="0 1 1" dir="0 -1 -1" diffuse="1 1 1"/>

        <!-- 3 by 3 square, 2 tall -->
        <body name="frame">
            <geom class="pole" name="pole_west"  fromto="-1.5 0 0  -1.5 0 2"/>
            <site name="Wt" pos="-1.5 0 2"/>
            <site name="Wb" pos="-1.5 0 0"/>

            <geom class="pole" name="pole_east"  fromto="+1.5 0 0  +1.5 0 2"/>
            <site name="Et" pos="+1.5 0 2"/>
            <site name="Eb" pos="+1.5 0 0"/>

            <geom class="pole" name="pole_south" fromto="0 -1.5 0  0 -1.5 2"/>
            <site name="St" pos="0 -1.5 2"/>
            <site name="Sb" pos="0 -1.5 0"/>

            <geom class="pole" name="pole_north" fromto="0 +1.5 0  0 +1.5 2"/>
            <site name="Nt" pos="0 +1.5 2"/>
            <site name="Nb" pos="0 +1.5 0"/>
        </body>

        <body name="lens">
            <freejoint name="root"/>

            <!-- 1.4/2=0.7 1.05/2=0.525 meters -->
            <!-- mass="3.5" kg -->
            <geom mass="3.5" name="lens" type="box" size="0.525 0.7 0.002" rgba="0 0 1 0.2" pos="0 0 2"/>
            <site name="W" pos="-0.525 +0.7 2"/>
            <site name="E" pos="+0.525 -0.7 2"/>
            <site name="S" pos="-0.525 -0.7 2"/>
            <site name="N" pos="+0.525 +0.7 2"/>

            <!-- distance from ground:2 - cone height:1.2 = 0.8 -->
            <geom mass="0" name="lightrays" rgba="1 1 0 0.1" type="mesh" pos="0 0 0.8" mesh="lightcone"/>
        </body>
    </worldbody>

    <tendon>
        <spatial name="Wt" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Wt"/>
            <site site="W"/>
        </spatial>
        <spatial name="Wb" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Wb"/>
            <site site="W"/>
        </spatial>

        <spatial name="Et" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Et"/>
            <site site="E"/>
        </spatial>
        <spatial name="Eb" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Eb"/>
            <site site="E"/>
        </spatial>

        <spatial name="St" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="St"/>
            <site site="S"/>
        </spatial>
        <spatial name="Sb" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Sb"/>
            <site site="S"/>
        </spatial>

        <spatial name="Nt" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Nt"/>
            <site site="N"/>
        </spatial>
        <spatial name="Nb" width="0.002" rgba="1 0 0 1" limited="true" range="0 0.33">
            <site site="Nb"/>
            <site site="N"/>
        </spatial>
    </tendon>

    <actuator>
        <motor name="Wt" tendon="Wt" gear="100000"/> <!-- 0.16 -->
        <motor name="Wb" tendon="Wb" gear="100000"/> <!-- 0.22 -->
        <motor name="Et" tendon="Et" gear="100000"/> <!-- -0.15 -->
        <motor name="Eb" tendon="Eb" gear="100000"/> <!-- -0.52 -->
        <motor name="St" tendon="St" gear="100000"/> <!-- -0.59 -->
        <motor name="Sb" tendon="Sb" gear="100000"/> <!-- 0 -->
        <motor name="Nt" tendon="Nt" gear="100000"/> <!-- 0.14 -->
        <motor name="Nb" tendon="Nb" gear="100000"/> <!-- -0.4 -->

        <!-- https://github.com/deepmind/mujoco/discussions/74 -->

        <!-- https://github.com/deepmind/mujoco/issues/84#issuecomment-986054248 -->
        <!-- https://roboti.us/forum/index.php?threads/simple-position-servo.3389/ -->
        <!-- <position name="Wt" tendon="Wt" gear="1" kp="100"/> -->
        <!-- <position name="Wb" tendon="Wb" gear="1" kp="100"/> -->
        <!-- <position name="Et" tendon="Et" gear="1" kp="100"/> -->
        <!-- <position name="Eb" tendon="Eb" gear="1" kp="100"/> -->
        <!-- <position name="St" tendon="St" gear="1" kp="100"/> -->
        <!-- <position name="Sb" tendon="Sb" gear="1" kp="100"/> -->
        <!-- <position name="Nt" tendon="Nt" gear="1" kp="100"/> -->
        <!-- <position name="Nb" tendon="Nb" gear="1" kp="100"/> -->
    </actuator>
</mujoco>
